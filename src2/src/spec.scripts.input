%postun
#echo "%postun $1"

[ $1 -ne 0 ] && exit 0 || : 
include remove_from_popt.make.include

%triggerin -- rpm < 4.0.3
#echo "%triggerin -- rpm < 4.0.3 ('$1' '$2')"

include remove_from_popt.make.include
cat /usr/lib/rpmrebuild/popt-without-POPTdesc >> /etc/popt || exit

%triggerin -- rpm >= 4.0.3
#echo "%triggerin -- rpm >= 4.0.3 ('$1' '$2')"

include remove_from_popt.make.include
cat /usr/lib/rpmrebuild/popt-with-POPTdesc >> /etc/popt || exit

