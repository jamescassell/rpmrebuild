########################################
# This code should remove all lines from
# the line contains 'RPMREBUILD START'
# till (include) line 'RPMREBUILD END'
# in the file /etc/popt
########################################

POPT=/etc/popt

if [ -f $POPT ]; then
   sed -i -e '/RPMREBUILD START/,/RPMREBUILD END/d' $POPT
fi
